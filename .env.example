# Environment Variables Template
# Copy this file to .env and fill in your values

# ---------------------------------------------------------
# Database Configuration
# ---------------------------------------------------------

# Option 1: Use a full connection URL (recommended for cloud databases)
DATABASE_URL=postgresql://username:password@host:5432/database_name

# Option 2: Use individual environment variables
# DATABASE_HOST=localhost
# DATABASE_PORT=5432
# DATABASE_USERNAME=postgres
# DATABASE_PASSWORD=your_password
# DATABASE_NAME=humanitas_db  # Master database

# Enable SSL for cloud databases (Render, Supabase, AWS RDS)
DATABASE_SSL=false

# ---------------------------------------------------------
# Application Configuration
# ---------------------------------------------------------

NODE_ENV=development
PORT=3001

# API Configuration
API_PREFIX=api/v1

# Enable/Disable Cron Jobs (only for worker service)
ENABLE_CRON=false

# ---------------------------------------------------------
# JWT Authentication
# ---------------------------------------------------------

JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=8h
JWT_REFRESH_SECRET=your-refresh-token-secret-change-this
JWT_REFRESH_EXPIRES_IN=7d

# ---------------------------------------------------------
# Security
# ---------------------------------------------------------

BCRYPT_SALT_ROUNDS=12
COOKIE_SECRET=your-cookie-secret-change-this

# ---------------------------------------------------------
# Frontend URLs (for CORS)
# ---------------------------------------------------------

FRONTEND_URL=http://localhost:1300
ADMIN_FRONTEND_URL=http://localhost:5173

# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:1300,http://localhost:5173

# ---------------------------------------------------------
# Inter-Service Communication
# ---------------------------------------------------------

# Admin API URL (for tenant-api to communicate with admin-api)
ADMIN_BACKEND_URL=http://admin-api:3000/api/v1

# Python Calculation Service URL
CALCULATION_SERVICE_URL=http://python-api:8000

# ---------------------------------------------------------
# Rate Limiting
# ---------------------------------------------------------

THROTTLE_LIMIT=100
THROTTLE_TTL=60

# ---------------------------------------------------------
# Email Configuration (Optional)
# ---------------------------------------------------------

# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=noreply@humanitas.com

# ---------------------------------------------------------
# File Storage (Optional)
# ---------------------------------------------------------

# AWS S3 Configuration
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=humanitas-files

# ---------------------------------------------------------
# Monitoring & Logging (Optional)
# ---------------------------------------------------------

# LOG_LEVEL=info
# SENTRY_DSN=your-sentry-dsn
