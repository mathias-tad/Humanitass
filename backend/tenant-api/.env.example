# ===========================
# HUMANITAS ERP - Environment Variables
# ===========================

# Application
NODE_ENV=development
PORT=3001
API_PREFIX=api/v1

# Database - Master (Admin API)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_secure_password_here
DB_NAME=humanitas_master
DB_SSL=false

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this
JWT_REFRESH_EXPIRES_IN=7d

# Cookie Settings
COOKIE_SECRET=your-cookie-secret-key
COOKIE_MAX_AGE=604800000  # 7 days in milliseconds

# CORS Origins
ALLOWED_ORIGINS=http://localhost:1300,http://localhost:5173

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# File Upload
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DEST=./uploads

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@humanitas-erp.com

# Redis (for caching and queues)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Python API (AI Service)
PYTHON_API_URL=http://localhost:8000

# Frontend URLs
TENANT_FRONTEND_URL=http://localhost:1300
ADMIN_FRONTEND_URL=http://localhost:5173

# AWS S3 (for file storage - optional)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=

# Logging
LOG_LEVEL=debug
LOG_TO_FILE=true

# Feature Flags
ENABLE_AI_CV_SCREENING=false
ENABLE_AUTO_PAYROLL=false
ENABLE_NOTIFICATIONS=true

# Timezone
TZ=Africa/Addis_Ababa
